# MediSafe+ Production Environment Variables
# Copy this file to .env.production and fill in actual values
# NEVER commit .env.production to version control

# Django Settings
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=your-secret-key-generate-strong-random-string-40-characters-minimum
DJANGO_ALLOWED_HOSTS=your-app-name.railway.app,www.your-domain.com


# Database Configuration (Railway PostgreSQL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=railway
DB_USER=postgres
DB_PASSWORD=your-railway-database-password-here
DB_HOST=containers-us-west-XXX.railway.app
DB_PORT=5432
DB_SSLMODE=require
DB_CONN_MAX_AGE=600

# Media Files Storage
MEDIA_URL=/media/
MEDIA_ROOT=media/

# Static Files
STATIC_URL=static/

# Security Settings
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Python Settings
PYTHONUNBUFFERED=1

# Optional: AWS S3 for Media Storage (if using S3 instead of Railway volume)
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
